{% extends 'base.html.twig' %}

{% block title %}Aidons les aidants{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/user/create.css') }}" rel="stylesheet"/>
{% endblock %}

{% block headForm %}inscription{% endblock %}
{% block body %}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="m-5">
            <div class="form-group">
                {{ form_label(form.username)}}
                {{ form_widget(form.username)}}
            </div>
            <div class="form-group">
                {{ form_widget(form.password) }}
            </div>
            <p>Veillez à ne pas oublier vos logins et mot de passe car il n'existe pas de système de récupération.</p>
            <div class="form-group">
                {{ form_label(form.rule)}}
                {{ form_widget(form.rule)}}
            </div>
            <div class="row mt-3">
                <button class="btn btn-perso mx-auto" type="submit">VALIDER</button>
            </div>
        </div>
    {{ form_end(form) }}
 {% endblock %}
