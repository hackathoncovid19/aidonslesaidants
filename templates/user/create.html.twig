{% extends 'base.html.twig' %}

{% block title %}Aidons les aidants{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/user/create.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="container-sm">
        <div id="headForm">
            <h2 class="text-center text-uppercase pt-5">inscription</h2>
        </div>
        {{ form_start(form)}}
        <div class="m-5">
        <div class="form-group">
            {{ form_label(form.username, 'Identifiant') }}
            {% if form_errors(form.username) %}
                <ul>
                    <li>Cet identifiant est déjà utilisé</li>
                </ul>
            {% endif %}
            {{ form_widget(form.username)}}
        </div>
        <div class="form-group">
            {{ form_widget(form.password) }}
        </div>

        <p>Veillez à ne pas oublier vos logins et mot de passe car il n'existe pas de système de récupération.</p>
        <div class="row mt-3">
            <button class="btn btn-perso mx-auto" type="submit">VALIDER</button>
        </div>
        </div>
        {{ form_end(form) }}
    </div>
 {% endblock %}
