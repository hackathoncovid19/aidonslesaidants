{% extends 'base.html.twig' %}

{% block title %}Aidons les aidants{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/ticket/view.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="container-sm">
        <div id="headForm">
            <h2 class="text-center text-uppercase pt-5">Détail de la demande {{ ticket.title }}</h2>
        </div>
        <div class="card mt-5">
            <h5 class="card-header text-perso">{{ ticket.title }}</h5>
            <div class="card-body">
                <h5 class="card-title">{{ ticket.description }}</h5>

                <hr />
                <h5 class="font-weight-bold">Informations complémentaires</h5>

                <div class="mb-3 row">
                    <div class="col-md-4">
                        {{ include('svg/_contact.svg.twig') }}
                    </div>
        
                    <div class="col-md-8">
                        {% if ticket.postcode is defined %}
                            <div class="card-text">
                                Code postal: <span class="font-weight-bold">{{ ticket.postcode }}</span>
                            </div>
                        {% endif %}
                        <p class="card-text">Contact: {{ ticket.contact }}</p>
                        <div class="d-flex flex-row">
                            {% if is_granted('ROLE_USER') == true %}
                                <a href="{{ path('ticket_view_user_list') }}" class="btn btn-perso mr-2">Retour à mes tickets</a>
                            {% endif %}
                            <a href="{{ path('ticket_list') }}" class="btn btn-perso">Retour à la liste des demandes</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
